<%- include('partials/head', { pageTitle: 'Registro' }) %>
<%- include('partials/navbar') %>

<div class="d-flex flex-column align-items-center justify-content-center">

    <h1 class="mb-4 mt-4">Página de registro</h1>

    <% if (error) { %>
        <div class="alert alert-danger" role="alert">
            <%= error %>
        </div>
    <% } %>

    <!-- Formulario para enviar el método POST de HTTP -->
    <form action="/signup" method="POST" class="d-flex flex-column align-items-center gap-3">

        <div>
            <label for="usernameElementID">Nombre de usuario</label>
            <input name="username" id="usernameElementID" placeholder="Tu nombre de usuario" class="form-control" required />
        </div>

        <div>
            <label for="emailElementID">Email</label>
            <input name="email" type="email" id="emailElementID" placeholder="tu@email.com" class="form-control" required />
        </div>

        <div>
            <label for="passwordElementID">Contraseña</label>
            <input name="password" type="password" id="passwordElementID" placeholder="Tu contraseña" class="form-control" required />
        </div>

        <div>
            <button type="submit" class="btn btn-primary mt-2">Registrarse</button>
        </div>

        <div class="mt-2">
            <p>¿Ya tenés cuenta? <a href="/login">Iniciar sesión</a></p>
        </div>
    </form>

</div>

